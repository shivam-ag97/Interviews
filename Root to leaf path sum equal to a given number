#include <iostream>
using namespace std;

struct tree
{	
	int data;	
	tree *left,*right;
};

struct tree* new_node(int d)
{
	struct tree*  root=(struct tree*)malloc(sizeof(struct tree*));
	root->data=d;
	root->left=NULL;
	root->right=NULL;
	return root;
}

bool sum_path(tree* root, int s)
{
	
	if(root==NULL)
	return (s==0);
	bool ans=0;
	int subsum=0;	
	subsum=s-root->data;
	if(subsum==0 && root->left==NULL && root->right==NULL)
	return 1;
	else if(root->left!=NULL)
				sum_path(root->left,subsum);
			if(root->right!=NULL)
				sum_path(root->right,subsum);
}

int main() 
{

	struct tree* root=new_node(10);
	//root->left=new_node(20);
	//root->right=new_node(30);
	//root->right->left=new_node(5);
	cout<<sum_path(root,11);
	return 0;
}
